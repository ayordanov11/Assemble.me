<Window x:Class="Assemble.me.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColorPick" Height="106.4" Width="103"
        ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>

        <ComboBox x:Name="ComboBoxColor" HorizontalAlignment="Left" Margin="30,23,0,0" VerticalAlignment="Top" Width="50" SelectionChanged="ComboBoxColor_SelectionChanged" RenderTransformOrigin="0.504,1.58">
            <ComboBoxItem x:Name="Red">
                <Rectangle  Width="30" Height="20" HorizontalAlignment="Left" Fill="Red"/>
            </ComboBoxItem>
            <ComboBoxItem x:Name="Blue">
                <Rectangle  Width="30" Height="20" HorizontalAlignment="Left" Fill="CornflowerBlue"/>
            </ComboBoxItem>
            <ComboBoxItem x:Name="Gray">
                <Rectangle  Width="30" Height="20" HorizontalAlignment="Left" Fill="Gray"/>
            </ComboBoxItem>
        </ComboBox>
        <Button x:Name="Pickbtn" Content="Pick !" HorizontalAlignment="Left" Margin="18,65,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
